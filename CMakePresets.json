{
    "version": 3,
    "configurePresets": [
        {
            "name": "config-x64",
            "displayName": "config-x64",
            "description": "Sets Ninja generator, build and install directory",
            "generator": "Visual Studio 17 2022",
            "toolset": "host=x86",
            "architecture": "x64",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "D:/CS/libraries/vcpkg/scripts/buildsystems/vcpkg.cmake",
                "VCPKG_TARGET_TRIPLET": "x64-windows",
                "CMAKE_EXPORT_COMPILE_COMMANDS": true
            },
            "environment": {
                "DISABLE_LAYER_AMD_SWITCHABLE_GRAPHICS_1": "1",
                "DISABLE_LAYER_NV_OPTIMUS_1": "1"
            },
            "warnings": {
                "unusedCli": false
            }
        }
    ],
    "buildPresets": [
        {
            "name": "build-x64-debug",
            "description": "",
            "displayName": "Cherno-Debug",
            "configurePreset": "config-x64",
            "jobs": 10,
            "configuration": "Debug"
        },
        {
            "name": "build-x64-release",
            "description": "",
            "displayName": "Cherno-Release",
            "configurePreset": "config-x64",
            "jobs": 10,
            "configuration": "RelWithDebInfo"
        },
        {
            "name": "build-x64-dist",
            "description": "",
            "displayName": "Cherno-Dist",
            "configurePreset": "config-x64",
            "jobs": 10,
            "configuration": "Release"
        }
    ]
}
